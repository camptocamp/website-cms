<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<template id="assets_frontend" name="CMS notifications frontend assets" inherit_id="website.assets_frontend">

		<xpath expr="." position="inside">
			<link rel="stylesheet" type="text/css" href="/cms_notifications/static/src/less/styles.less" />
			<script type="text/javascript" src="/cms_notifications/static/src/js/read_unread.js"></script>
		</xpath>

	</template>

	<template id="assets_common" inherit_id="web.assets_common">
		<!-- upgrade fontawesome to include envelope-open icon -->
		<xpath expr="link[@href='/web/static/lib/fontawesome/css/font-awesome.css']" position="replace">
			<link rel="stylesheet" type="text/css" href="/cms_notifications/static/lib/fontawesome-4.7.0/css/font-awesome.css" />
		</xpath>
	</template>

</odoo>
